<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <SwitchPreference
            android:key="rotate_field"
            android:title="@string/pref_title_rotate_field"
            android:summary="@string/pref_description_rotate_field"
            android:defaultValue="false"/>
    <SwitchPreference
            android:key="resSort_on_press"
            android:title="@string/pref_title_resSort_on_press"
            android:summary="@string/pref_description_resSort_on_press"
            android:defaultValue="false"/>
    <SwitchPreference
            android:key="color_field"
            android:title="@string/pref_title_color_field"
            android:summary="@string/pref_description_color_field"
            android:defaultValue="false"/>
    <SwitchPreference
            android:key="vibration_on_click"
            android:title="@string/pref_title_vibration_on_click"
            android:summary="@string/pref_description_vibration_on_click"
            android:defaultValue="true"/>


    <ListPreference
            android:key="game_size"
            android:title="@string/pref_title_game_size"
            android:defaultValue="4"
            android:entries="@array/game_size_list_titles"
            android:entryValues="@array/game_size_list_values"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"/>

</PreferenceScreen>
